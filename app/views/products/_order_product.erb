<div class="order_product">
  <h3><%= link_to product.name, show_product_path(product.id) %></h3>
  <p class="product_image">
    <% if product.image.url.include? 'missing.png' %>
      <%= link_to '[' + product.name + ']', show_product_path(product.id) %>
    <% else %>
      <%= link_to image_tag(product.image.url(:small)), show_product_path(product.id) %>
    <% end %>
  </p>
  <p class = "price">Price: <%= number_to_currency(product.price) %></p>
  <br />
  <p>Quantity: <%=session[:cart]["#{product.id}"] %></p>
  <input type="hidden" id = "product_id" value="<%=product.id%>"/>
</div>
