<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
  </head>
  <header>
    <h1>Products</h1>
    <%= render 'common/search', :categories => @categories %>
  </header>
  <body>
    <p>
      <%= render 'common/minicart', :products_in_cart => @products_in_cart %>

      <% @categories.each do |category| %>
        <div class="category">
          <h2><%=link_to category.name, show_path(category.id)%></h2>
            <%category.products.each do |product|%>
            <%= render 'products/product', :product => product %>
            <%end%>
        </div>
      <%end%>
    </p>
  </body>
</html>
